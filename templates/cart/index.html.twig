					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">Annuler</button>
						<a href="{{path('place_order')}}" class="btn btn-success">Valider et payer</a>
					</div>
				</div>
			</div>
			<!-- modal-bialog .// -->
		</div>
		<!-- modal.// -->


	{% endif %}

{% endblock %}
