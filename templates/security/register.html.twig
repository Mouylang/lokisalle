{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block meta %}
  <meta name="description" content="Lokisalle - formulaire d'inscription pour devenir membre" />
{% endblock %}

{% block title %}
Lokisalle - S'inscrire et devenir membre
{% endblock %}

{% block body %}
      <h1> S'incrire </h1>
     
      {{form_start(registrationForm)}}
    {{
        form_row(registrationForm.login,{
        'attr':{'placeholder':'Entrez votre pseudo'},
        'label': 'Login' })
    }}
    {{
        form_row(registrationForm.lastname,{
        'attr':{'placeholder':'Entrez votre nom'},
        'label': 'Nom' })
    }}
    {{
        form_row(registrationForm.firstname,{
        'attr':{'placeholder':'Entrez votre prénom'},
        'label': 'Prénom' })
    }}
    {{
        form_row(registrationForm.email,{
        'attr':{'placeholder':'Entrez votre email'},
        'label': 'Email' })
    }}
    {{
        form_row(registrationForm.gender,{
        'label': 'Sexe' })
    }}
    {{
        form_row(registrationForm.address,{
        'attr':{'placeholder':'Entrez votre adresse'},
        'label': 'Adresse' })
    }}
    {{
        form_row(registrationForm.zipCode,{
        'attr':{'placeholder':'Entrez votre code postal'},
        'label': 'Code Postal' })
    }}
    {{
        form_row(registrationForm.city,{
        'attr':{'placeholder':'Entrez votre ville'},
        'label': 'Ville' })
    }}
    {{
        form_row(registrationForm.password,{
        'attr':{'placeholder':'Entrez un mot de passe'},
        'label': 'Mot de passe' })
    }}
    {{
        form_row(registrationForm.confirmPassword,{
        'attr':{'placeholder':'Entrez à nouveau le mot de passe'},
        'label': 'Confirmer votre mot de passe' })
    }}
    {{
        form_row(registrationForm.acceptNewletter,{
        'label': 'S\'inscrire à la Newsletter' })
    }}

    <button type="submit" class="btn btn-primary">Devenir membre</button>
      {{form_end(registrationForm)}}

     

{% endblock %}