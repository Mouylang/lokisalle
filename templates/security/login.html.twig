{% extends 'base.html.twig' %}

{% block meta %}
  <meta name="description" content="Lokisalle - liste des salles" />
{% endblock %}

{% block title %}
  Se connecter
{% endblock %}

{% block body %}
    <h1> Se connecter </h1>
    {% if error %}
        <div class="alert alert-danger">Erreur d'authentification</div>
    {% endif %}    
    <form action="{{path('security_login')}}" method="post">
        <div class="form-group">
            <input placeholder="Votre login..."  required type="text" name="_username" value="{{lastUsername}}" class="form-control">
        </div>
        <div class="form-group">
            <input placeholder="Mot de passe..."  required type="password" name="_password" class="form-control">
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    </form>
  
      

{% endblock %}