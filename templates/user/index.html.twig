{% extends 'base.html.twig' %}

{% block meta %}
	<meta name="description" content="Lokisalle - liste des utilisateurs"/>
{% endblock %}

{% block title %}Liste des utilisateurs
{% endblock %}

{% block body %}
	<h1 class="pb-5">Liste des utilisateurs</h1>
	<a href="{{path('user_create')}}" class="btn btn-primary">Ajouter un utilisateur</a>
	<p></p>
	<div class="table-responsive">
		<table class="table">
			<thead class="thead-dark">
				<tr>
					<th>Login</th>
					<th>Nom</th>
					<th>Prénoms</th>
					<th>Email</th>
					<th>Sexe</th>
					<th>Adresse</th>
					<th>Code Postal</th>
					<th>Ville</th>
					<th>Inscrit à la newletter</th>
					<th>Statut</th>
					<th>Role</th>
					<th>Action</th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{user.login}}</td>
						<td>{{user.lastname}}</td>
						<td>{{user.firstname}}</td>
						<td>{{user.email}}</td>
						<td>{{user.gender}}</td>
						<td>{{user.address}}</td>
						<td>{{user.zipCode}}</td>
						<td>{{user.city}}</td>
						<td>{{user.acceptNewletter}}</td>
						<td>{{user.enabled}}</td>
						<td>
							{% for rolename in user.roles %}
								{{rolename}}
								<br>
							{% endfor %}
						</td>
						<td>
							<a href="{{path('user_edit',{'id': user.id})}}">Modifier</a>
						</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
